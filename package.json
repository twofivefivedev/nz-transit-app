{
  "name": "metlink-vnext",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "gtfs:ingest": "npm run ingest -w @metlink/scripts",
    "gtfs:ingest:dry-run": "npm run ingest:dry-run -w @metlink/scripts",
    "gtfs:verify": "npm run verify-nearby -w @metlink/scripts"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts"
  ],
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20"
  }
}


